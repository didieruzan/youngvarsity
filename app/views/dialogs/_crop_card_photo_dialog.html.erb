<style type="text/css">
#crop_card_image_dialog
{
  position: absolute;
  right: 200px;
  top: 160px;
  display: none;
  background-color: white;
  border-style: solid;
  border-width: 10px;
  border-color: rgba(204, 204, 204, 0.6);
  border-radius: 5px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  width: 325px;
  padding: 15px;
  box-shadow: 0 3px 7px rgba(36, 26, 26, 0.4);
  -webkit-box-shadow: 0 3px 7px rgba(36, 26, 26, 0.4);
  -moz-box-shadow: 0 3px 7px rgba(36, 26, 26, 0.4);

}

#crop_card_image_dialog .dlg_controls, #crop_card_image_dialog .dlg_controls p{
  float: left;
  width: 400px;
}

#crop_card_image_dialog .dlg_controls p{
  margin: 10px 0;
}

.crop_wrap {
  float: left;
}

</style>

<div id="crop_card_image_dialog">
  <div class="dlg_controls">
    <div class="btn btn-small btn cancel_crop_btn">Cancel</div>
    <div class="btn btn-small btn-success apply_crop_btn">Apply</div>
    <p>Drag selection around to select area to be cropped</p>
  </div>
  <div class="crop_wrap">
    <%= image_tag @collectible.srcphoto_url(:ori_medium), :id => "card_image_crop" if !@collectible.srcphoto.blank? %>
  </div>
</div>