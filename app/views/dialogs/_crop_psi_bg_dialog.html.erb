<style type="text/css">
#crop_psi_bg_dialog
{
  position: absolute;
  right: 100px;
  top: 115px;
  background-color: white;
  border-style: solid;
  border-width: 10px;
  border-color: rgba(204, 204, 204, 0.6);
  border-radius: 5px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  width: 380px;
  padding: 15px;
  box-shadow: 0 3px 7px rgba(36, 26, 26, 0.4);
  -webkit-box-shadow: 0 3px 7px rgba(36, 26, 26, 0.4);
  -moz-box-shadow: 0 3px 7px rgba(36, 26, 26, 0.4);
  display: none;
}

#crop_psi_bg_dialog .dlg_controls, #crop_psi_bg_dialog .dlg_controls p{
  float: left;
  width: 400px;
}

#crop_psi_bg_dialog .dlg_controls p{
  margin: 10px 0;
}

#crop_psi_bg_dialog #apply_crop_btn {
  margin-left: 10px;
}

.psi_bg_crop_wrap, #psi_bg_crop_img {
  float: left;
}

</style>

<div id="crop_psi_bg_dialog">
  <div class="dlg_controls">
    <div class="btn-small btn" id="cancel_crop_btn">Cancel</div>
    <div class="btn btn btn-danger" id="apply_crop_btn">Apply</div>
    <p>Drag selection around to select area to be cropped</p>
  </div>
  <div class="psi_bg_crop_wrap">
    <%= image_tag current_user.psi_bg_380, :id => "psi_bg_crop_img" %>
  </div>
</div>